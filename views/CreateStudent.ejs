<%- include('partials/header') -%>

    <body class="announcement-body-page">
        <main>
          <div class="createstudent-container">
          <h1 class="create-event-text">Create Student</h1>
            <Form id="createEvent" action='../createstudent' method='POST'>
                <table class="create-student-table">
                    <tr>
                        <th>First Name:</th>
                        <td><input type="text" id="fName" name="fName" required></td>
                    </tr>
                    <tr>
                        <th>Last Name:</th>
                        <td><input type="text" id="lName" name="lName" required></td>
                    </tr>
                    <tr>
                        <th>UNCC Email:</th>
                        <td><input type="email" id="email" pattern=".+@uncc.edu" name="email" required></td>
                    </tr>
                    <tr>
                        <th>Room Number:</th>
                        <td><input type="text" id="roomID" name="roomID" required></td>

                    </tr>
                    <tr>
                        <th>Role:</th>
                        <td class="create-student-role"><select id="role" name="role" required>
                                <option value="staff">Staff</option>
                                <option value="RA">RA</option>
                                <option value="Student">Student</option>
                        </td>
                    </tr>


                </table>
                <div class="create-button-container">
                <button class="create-student-button" type="submit" id="formButton" >Add Student</button>
                </div>
            </Form>
            </div>

        </main>
    </body>
    <%- include('partials/footer') -%>
